{
  "name": "ollie-autoreply",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/",
        "main": "./src/index.ts",
        "tsConfig": "./tsconfig.lib.json",
        "assets": ["*.md"]
      }
    },
    "lint": {
      "command": "eslint ./src ./package.json"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/"
      }
    },
    "start:dev": {
      "command": "env-cmd -f .env.development.local nodemon ./src/main.ts"
    },
    "start": {
      "dependsOn": ["build"],
      "command": "node ./dist/src/main.js"
    },
    "register_commands": {
      "dependsOn": ["build"],
      "command": "node ./dist/src/scripts/register-commands.js"
    }
  },
  "tags": []
}
